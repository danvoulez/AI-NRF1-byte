{
  "$id": "https://ubl.agency/schemas/product.v1.json",
  "type": "object",
  "required": ["v", "name", "version", "pipeline"],
  "properties": {
    "v": { "const": "product-v1" },
    "name": { "type": "string" },
    "version": { "type": "string" },
    "pipeline": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["step_id", "kind", "version", "config"],
        "properties": {
          "step_id": { "type": "string" },
          "kind": { "type": "string" },
          "version": { "type": "string" },
          "config": {},
          "on_error": { "enum": ["nack", "skip", "fail"] },
          "if": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "io_bindings": {}
  },
  "additionalProperties": false
}
